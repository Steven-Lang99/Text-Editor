{
  "name": "text-editor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "concurrently \"cd client && npm run build\" \"cd server && npm start\" ",
    "dev": "concurrently \"cd server && nodemon server.js\" \"cd client && npm run dev\"",
    "build:client": "cd ./client && npm install && npm run build",
    "build:server": "cd ./server && npm install",
    "build": "npm run build:client && npm run build:server",
    "start": "node server/server.js",
    "heroku-prebuild": "export NPM_CONFIG_PRODUCTION=false; export NODE_ENV=development",
    "heroku-postbuild": "export NPM_CONFIG_PRODUCTION=true; export NODE_ENV=production;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Steven-Lang99/Text-Editor.git"
